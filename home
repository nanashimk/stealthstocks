export default function Home() {
  const [searchQuery, setSearchQuery] = useState("");
  const [cart, setCart] = useState([]);
  const [lightboxOpen, setLightboxOpen] = useState(false);
  const [currentProduct, setCurrentProduct] = useState(null);
  const [currentImageIndex, setCurrentImageIndex] = useState(0);

  const filteredProducts = useMemo(() => {
    if (!searchQuery) return CATALOG;
    return CATALOG.filter(product =>
      product.title.toLowerCase().includes(searchQuery.toLowerCase())
    );
  }, [searchQuery]);

  const addToCart = (product) => {
    setCart(prev => {
      const existing = prev.find(item => item.id === product.id);
      if (existing) {
        return prev.map(item =>
          item.id === product.id ? { ...item, quantity: item.quantity + 1 } : item
        );
      }
      return [...prev, { ...product, quantity: 1 }];
    });
  };

  const openLightbox = (product, imageIndex = 0) => {
    setCurrentProduct(product);
    setCurrentImageIndex(imageIndex);
    setLightboxOpen(true);
  };

  return (
    <div className="min-h-screen bg-gradient-to-b from-white via-blue-50/30 to-white relative overflow-hidden">
      {/* Space Background Effects */}
      <div className="fixed inset-0 pointer-events-none overflow-hidden">
        <div className="absolute top-10 left-10 w-64 h-64 bg-blue-400/10 rounded-full blur-3xl animate-pulse"></div>
        <div className="absolute top-40 right-20 w-96 h-96 bg-purple-400/5 rounded-full blur-3xl animate-pulse delay-1000"></div>
        <div className="absolute bottom-20 left-1/3 w-80 h-80 bg-cyan-400/5 rounded-full blur-3xl animate-pulse delay-2000"></div>
        {[...Array(30)].map((_, i) => (
          <div
            key={i}
            className="absolute w-1 h-1 bg-blue-300/40 rounded-full"
            style={{
              top: `${Math.random() * 100}%`,
              left: `${Math.random() * 100}%`,
              animation: `twinkle ${2 + Math.random() * 3}s infinite ${Math.random() * 2}s`
            }}
          />
        ))}
      </div>

      <div className="relative z-10">
        {/* Hero Section */}
        <section className="pt-24 pb-12 px-6">
          <div className="max-w-7xl mx-auto text-center">
            <div className="inline-flex items-center gap-2 bg-gradient-to-r from-blue-500/10 to-purple-500/10 border border-blue-200/50 rounded-full px-4 py-2 mb-6">
              <Sparkles className="w-4 h-4 text-blue-600" />
              <span className="text-sm font-medium text-blue-900">Authenticité garantie</span>
            </div>
            
            <h1 className="text-5xl md:text-7xl font-extrabold mb-6 bg-gradient-to-r from-blue-600 via-purple-600 to-blue-600 bg-clip-text text-transparent">
              Legit Flow
            </h1>
            
            <p className="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
              Articles authentiques et traçables, expédiés depuis l'Europe
            </p>

            {/* Search Bar */}
            <div className="max-w-2xl mx-auto mb-8">
              <div className="relative group">
                <Search className="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400 group-focus-within:text-blue-500 transition-colors" />
                <Input
                  type="text"
                  placeholder="Rechercher un produit..."
                  value={searchQuery}
                  onChange={(e) => setSearchQuery(e.target.value)}
                  className="pl-12 pr-4 py-6 text-lg border-2 border-gray-200 focus:border-blue-400 rounded-2xl shadow-lg shadow-blue-100/50"
                />
              </div>
            </div>

            {/* Quick Actions */}
            <div className="flex gap-4 justify-center flex-wrap">
              <Link to={createPageUrl("About")}>
                <Button variant="outline" className="gap-2 rounded-full px-6 py-6 border-2 hover:bg-blue-50 hover:border-blue-300">
                  <Info className="w-5 h-5" />
                  Provenance des produits
                </Button>
              </Link>
              <Link to={createPageUrl("Cart")}>
                <Button className="gap-2 rounded-full px-6 py-6 bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700">
                  <ShoppingCart className="w-5 h-5" />
                  Panier ({cart.reduce((sum, item) => sum + item.quantity, 0)})
                </Button>
              </Link>
            </div>
          </div>
        </section>

        {/* FAQ Section */}
        <section className="py-12 px-6">
          <div className="max-w-4xl mx-auto">
            <div className="text-center mb-8">
              <h2 className="text-3xl font-bold mb-2 flex items-center justify-center gap-3">
                <Star className="w-8 h-8 text-blue-500" />
                Questions Fréquentes
                <Star className="w-8 h-8 text-blue-500" />
              </h2>
              <p className="text-gray-600">Tout ce que vous devez savoir sur nos produits</p>
            </div>

            <Card className="border-2 border-blue-100 shadow-xl shadow-blue-100/50 rounded-3xl overflow-hidden backdrop-blur-sm bg-white/80">
              <CardContent className="p-6">
                <Accordion type="single" collapsible className="w-full">
                  <AccordionItem value="item-1" className="border-blue-100">
                    <AccordionTrigger className="text-lg font-semibold hover:text-blue-600">
                      Le produit est-il authentique ?
                    </AccordionTrigger>
                    <AccordionContent className="text-gray-700 leading-relaxed">
                      Oui. Nous ne vendons que des articles authentiques et traçables. Nos lots proviennent de 
                      grossistes/liquidateurs européens agréés ; les exemplaires ont été mis sur le marché européen. 
                      Les documents (facture fournisseur, connaissement, SKU) sont conservés et fournis sur demande.
                    </AccordionContent>
                  </AccordionItem>

                  <AccordionItem value="item-2" className="border-blue-100">
                    <AccordionTrigger className="text-lg font-semibold hover:text-blue-600">
                      Pourquoi l'article est-il expédié depuis la Chine ?
                    </AccordionTrigger>
                    <AccordionContent className="text-gray-700 leading-relaxed">
                      Beaucoup d'articles officiels sont fabriqués ou stockés temporairement en Asie avant distribution. 
                      L'expédition depuis la Chine n'altère pas le statut d'authenticité lorsque la mise sur le marché 
                      de ces exemplaires a été autorisée pour l'UE. Notre garantie repose sur la traçabilité documentaire.
                    </AccordionContent>
                  </AccordionItem>

                  <AccordionItem value="item-3" className="border-blue-100">
                    <AccordionTrigger className="text-lg font-semibold hover:text-blue-600">
                      Puis-je obtenir les preuves d'origine ?
                    </AccordionTrigger>
                    <AccordionContent className="text-gray-700 leading-relaxed">
                      Oui. Sur simple demande, nous fournissons les documents de traçabilité liés à votre exemplaire 
                      (facture fournisseur, bill of lading, références produit).
                    </AccordionContent>
                  </AccordionItem>
                </Accordion>
              </CardContent>
            </Card>
          </div>
        </section>

        {/* Products Section */}
        <section className="py-12 px-6">
          <div className="max-w-7xl mx-auto">
            <div className="text-center mb-12">
              <h2 className="text-4xl font-bold mb-3 flex items-center justify-center gap-3">
                <Rocket className="w-10 h-10 text-purple-500" />
                Notre Collection
              </h2>
              <p className="text-gray-600">
                {filteredProducts.length} {filteredProducts.length === 1 ? 'produit' : 'produits'} disponible{filteredProducts.length === 1 ? '' : 's'}
              </p>
            </div>

            <ProductGrid
              products={filteredProducts}
              onProductClick={openLightbox}
              onAddToCart={addToCart}
            />
          </div>
        </section>

        {/* Product Note */}
        <section className="py-12 px-6">
          <div className="max-w-4xl mx-auto">
            <Card className="border-2 border-blue-100 bg-gradient-to-br from-blue-50/50 to-purple-50/30 rounded-3xl backdrop-blur-sm">
              <CardContent className="p-8 text-center">
                <h3 className="text-xl font-bold mb-3">Article authentique — origine et traçabilité</h3>
                <p className="text-gray-700 leading-relaxed">
                  Maillot authentique, issu d'un lot mis sur le marché européen. Provenance documentée : 
                  facture du grossiste/liquidateur et références SKU disponibles sur demande.
                </p>
              </CardContent>
            </Card>
          </div>
        </section>
      </div>

      {/* Lightbox */}
      {lightboxOpen && currentProduct && (
        <Lightbox
          product={currentProduct}
          imageIndex={currentImageIndex}
          onClose={() => setLightboxOpen(false)}
          onAddToCart={addToCart}
          onImageChange={setCurrentImageIndex}
        />
      )}

      <style jsx>{`
        @keyframes twinkle {
          0%, 100% { opacity: 0.3; }
          50% { opacity: 1; }
        }
      `}</style>
    </div>
  );
}
